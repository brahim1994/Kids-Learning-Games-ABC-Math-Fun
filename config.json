<script>
  document.querySelectorAll('.card').forEach(card=>{
    const url = card.dataset.src;
    const btnPlay = card.querySelector('.play');
    const btnOpen = card.querySelector('.open');
    const iframeWrap = card.querySelector('.iframe-wrap');

    btnPlay.addEventListener('click', ()=>{
      if (iframeWrap.dataset.loaded === '1') {
        iframeWrap.style.display = iframeWrap.style.display === 'block' ? 'none' : 'block';
        return;
      }
      const ifr = document.createElement('iframe');
      ifr.src = url;
      ifr.allow = 'autoplay; fullscreen';
      ifr.loading = 'lazy';
      iframeWrap.appendChild(ifr);
      iframeWrap.style.display = 'block';
      iframeWrap.dataset.loaded = '1';
      setTimeout(()=> ifr.scrollIntoView({behavior:'smooth', block:'center'}), 200);
    });

    btnOpen.addEventListener('click', ()=>{
      window.open(url, '_blank', 'noopener');
    });
  });
</script>

